@using DataAccessLayer
@model IEnumerable<Pokemon>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Attack)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Defense)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SpecialAttack)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SpecialDefense)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Speed)
        </th>
    </tr>
    @foreach(Pokemon P in Model)
    {
        <tr>
            <td>@P.Name</td>
            <td>@P.Type</td>
            <td>@P.HP</td>
            <td>@P.Attack</td>
            <td>@P.Defense</td>
            <td>@P.SpecialAttack</td>
            <td>@P.SpecialDefense</td>
            <td>@P.Speed</td>
        </tr>
    }
</table>
